function getTable($ids=array(), $anio){
  $n = node_load($ids[0]);
  for($j=1;$j<=12;$j++){
    $meses[$j] = null;
  }
  for($i=0; $i<count($ids); $i++){
    $nodo = node_load($ids[$i]);
    $mes = date('n', strtotime($nodo->field_mes['und'][0]['value']));
    $meses[$mes] = $nodo;
  }
  
$head = '
<table class="views-table cols-9">
         <thead>
      <tr>
        <th class="views-field views-field-field-nombres">
          Mes </th>
        <th class="views-field views-field-field-medidor">
            Consumo M3</th>
        <th class="views-field views-field-php-12">
            Recargo por incumplimiento</th>
        <th class="views-field views-field-php-2">
            Multa por retrazo</th>
        <th class="views-field views-field-php-3">
            Multa por inacistencia</th>
        <th class="views-field views-field-php-4">
            Reposicion de comprobante</th>
        <th class="views-field views-field-php-5">
            Tarifa por consumo</th>
        <th class="views-field views-field-php-6">
            Total a cancelar</th>
        <th class="views-field views-field-php-7">
            Numero de comprobate</th>
      </tr>
    </thead>
    <tbody>';
$fila = "";
  for($i=1; $i<=12;$i++) {
    $ant=0;
    $act=0;
    if(!empty($meses[$i])){
        $ant = $meses[$i]->field_lectura_anterior['und'][0]['value'];
        $act = $meses[$i]->field_lectura_actual['und'][0]['value'];
    }
    $fecha = $anio."-".( $i<10 ? "0".$i : $i );
    $res = db_query("SELECT field_monto_value FROM `field_revision_field_monto` 
        WHERE `bundle` = 'multa' and entity_id in (SELECT entity_id FROM `field_data_field_motivo` 
        WHERE `field_motivo_value` like 'Inasistencia o retraso a reunión en fecha: ". $fecha ."%'
        and entity_id in (SELECT entity_id FROM `field_data_field_medidor` WHERE `bundle` = 'multa' 
        and `field_medidor_target_id` = :idnode))", array(':idnode'=>$nodo->field_medidor['und'][0]['target_id']));

    $retrazo = 0;
    $inacistencia = 0;

    foreach($res as $row){
      if($row->field_monto_value == 10)
        $inacistencia += $row->field_monto_value;
      else 
        $retrazo += $row->field_monto_value;
      
    }
    
    
    $consumo = $act - $ant;
    $recargo = 0;
    $comprovante = 0;
    $tarifa = (!empty($meses[$i]->field_monto['und'][0]['value'])? $meses[$i]->field_monto['und'][0]['value'] : 0 );
    $total = $recargo + $retrazo + $inacistencia + $comprovante + $tarifa;
    $numero = (!empty($meses[$i]->field_comprobante_lectura['und'][0]['value']) ? $meses[$i]->field_comprobante_lectura['und'][0]['value'] : "---");

    $fila .= '
      <tr class="odd views-row-first">
        <td class="views-field views-field-field-nombres">
          '.getLiteralMonth($i).'</td>
        <td class="views-field views-field-field-medidor">'. $consumo .'</td>
        <td class="views-field views-field-php-12">'. $recargo .'</td>
        <td class="views-field views-field-php-2">'. $retrazo .'</td>
        <td class="views-field views-field-php-3">'. $inacistencia .'</td>
        <td class="views-field views-field-php-4">'. $comprovante .'</td>
        <td class="views-field views-field-php-5">'.$tarifa.'</td>
        <td class="views-field views-field-php-6">'. $total .'</td>
        <td class="views-field views-field-php-7">'. $numero .'</td>
      </tr>';
  }
    $valor = $head.$fila.'</tbody></table>';
  return $valor;  
}

function getLectura($idmedidor, $anio){
  $sql = "SELECT entity_id FROM field_data_field_mes WHERE YEAR( field_mes_value ) = :year 
  AND entity_id in ( SELECT entity_id FROM field_data_field_medidor 
                    WHERE field_medidor_target_id = :idmedidor and bundle = 'lectura' )";
  $res = db_query($sql, array(':year' => $anio, ':idmedidor'=> $idmedidor));
  $ids = array();
  foreach ($res as $row){
    $ids[] = $row->entity_id;
  }
  return $ids;
}

